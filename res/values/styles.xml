<resources>
    <style name="batteryStatusText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="batteryStatusTextDark" parent="batteryStatusText">
        <item name="android:textColor">#000000</item>
        <item name="android:shadowColor">#FFFFFF</item>
    </style>
    <style name="gravityBottom">
        <item name="android:gravity">bottom|center_horizontal</item>
    </style>
    <style name="gravityTop">
        <item name="android:gravity">top|center_horizontal</item>
    </style>
    <style name="table_label">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">4dp</item>
    </style>
    <style name="table_value">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>